<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-hover" border="1" id="postTable">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      
      
      <th>Sport</th>
      <th>Player</th>
      <th>Images</th>
     <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody class="table-warning">
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.sport.name %>
        <td><%= post.user.email%>
        
       
        <td><%= link_to 'Post Images', post_attachments_path(@post_attachments) %></td>
        
        <td><%= link_to 'Show Sport', [@sport] %></td>
       <% if current_user.id = current_user.player? || current_user.admin?  %>
        <td><%= link_to 'Edit Post', edit_sport_post_path(@sport, post) %></td>
        <td><%= link_to 'Destroy Post', [@sport, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_sport_post_path(@sport) %>
