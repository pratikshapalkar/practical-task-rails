<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-hover" border="1" id="playerTable">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      
      <th>Images</th>
      <th>Sport</th>
      <th>Player</th>
     <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody class="table-warning">
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        
       
         <td><img src="<%= post.images %>" class="player-show"></td>
          <td><%= post.sport.sport_name %></td>
        <td><%= post.player.name %></td>
        <td><%= link_to 'Show', post %></td>
        <% if current_user && current_user.player? %> 
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
