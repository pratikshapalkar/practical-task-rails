<p id="notice"><%= notice %></p>

<h1>Achievements</h1>

<table class="table table-hover" border="1" id="playerTable">
  <thead class="table-dark">
    <tr>
      <th>Award</th>
      <th>Gold medal</th>
      <th>Silver medal</th>
      <th>Bronze medal</th>
      <th>Player</th>
      <th>Status</th>
      <th>Show</th>
      <% if current_user.admin? %>
      <th>Edit</th>
      <th>Destroy</th>
      <% end %>
      <%# <th colspan="3"></th> %>
    </tr>
  </thead>

  <tbody class="table-warning">
    <% @achievements.each do |achievement| %>
      <tr>
        <td><%= achievement.award %></td>
        <td><%= achievement.gold_medal %></td>
        <td><%= achievement.silver_medal %></td>
        <td><%= achievement.bronze_medal %></td>
        <td><%= achievement.player.name %></td>
         <td><%= achievement.status %></td>
        <td><%= link_to 'Show ', achievement %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Edit ', edit_achievement_path(achievement) %></td>
        <td><%= link_to 'Destroy', achievement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Achievement', new_achievement_path %>
