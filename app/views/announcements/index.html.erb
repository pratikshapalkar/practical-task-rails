<p id="notice"><%= notice %></p>

<h1>Announcements</h1>

<table class="table table-hover" border="1" id="playerTable">
  <thead class="table-dark">
    <tr>
      
      <th>Title</th>
      <th>Sport</th>
      <th>Show</th>
      <% if current_user.admin?  %>
      <th>Edit</th>
      <th>Destroy</th>
      <% end %>
     
    </tr>
  </thead>

   <tbody class="table-warning">
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.title %></td>
        <td><%= announcement.sport.name %></td>
       
        <td><%= link_to 'Show Sport', [@sport] %></td>
        <% if current_user.admin?  %>
        <td><%= link_to 'Edit Announcement', edit_sport_announcement_path(@sport, announcement) %></td>
        <td><%= link_to 'Destroy Announcement', [@sport, announcement], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin?   %>
<%= link_to 'New Announcement', new_sport_announcement_path(@sport) %>
<% end %>
