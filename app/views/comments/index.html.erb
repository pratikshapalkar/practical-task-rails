<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table class="table table-hover" border="1" id="commentTable">
  <thead class="table-dark">
    <tr>
      <th>Comment no</th>
      <th>User comment</th>
      <th>Post</th>
      <th>Sport</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
     
    </tr>
  </thead>

   <tbody class="table-warning">
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.comment_no %></td>
        <td><%= comment.user_comment %></td>
        <td><%= comment.post.title %></td>
        <td><%= comment.sport_id %></td>
       
        <%# <td><%= link_to 'Show Post', [@post] %>
       
        <td><%= link_to 'Edit Post', edit_sport_post_comment_path(@sport,@post,comment) %></td>
        <td><%= link_to 'Destroy Post', [@sport,@post, comment],  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

