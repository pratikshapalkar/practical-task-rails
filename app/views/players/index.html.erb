<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table class="table table-hover" border="1" id="playerTable">
  <thead class="table-dark">
    <tr>
    <th>Player name</th>
     <th>Image</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Phone</th>
     
      <th>Gender</th>
      <th>Sport</th>
      <%# <th colspan="3"></th> %>
    </tr>
  </thead>

  <tbody class="table-warning">
    <% @players.each do |player| %>
      <tr>
       <td><%= player.name %></td>
       <td><img src="<%= player.image %>" class="player-show"></td>
        <td><%= player.city %></td>
        <td><%= player.state %></td>
        <td><%= player.country %></td>
        <td><%= player.phone %></td>
        
        <td><%= player.gender %></td>
         <td><%= player.sport.sport_name %></td>
       
        <%= link_to 'Show', player %>
        <%= link_to 'Edit', edit_player_path(player) %>
        <%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


